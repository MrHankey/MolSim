#! /bin/csh -f
#
# Scriptfile
#
# rho    = density
# lmax   = number of steps
# nequil = number of equilibration steps
# dr     = maximum displacement
# npart  = number of particles

# noch eine foreach-Schleife für Temperatur

foreach temp (2.0) #0.5 2.0 3.0)

foreach rho (0.40 0.70 0.80 0.90)

cat > fort.15  <<endofdata
  ibeg  nequil  nprod  nsamp  
     0     0   10000      1        
    dr
  0.09 
ndispl
    50  
 npart    temp    rho
   100     ${temp}  ${rho} 
endofdata

cp lj.res      fort.11
cp lj.model    fort.25

time  ../Source/mc_nvt  > out 

mv fort.21     lj.res
mv fort.22     movie.pdb
mv fort.66     lj_${rho}_${temp}.energy
mv fort.67     lj_${rho}_${temp}.pressure
rm fort.*

end
end
exit
